<%- include('../includes/head.ejs') %>
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<div class="container m-3 p-3 mx-auto">
    <% if (orders.length <= 0) {%>
        <h1>No Orders</h1>
    <%} else {%>
        <ul class="list-group">
            <% orders.forEach((order, index) => {%>
            <li class="list-group-item d-flex flex-column justify-content-around align-items-left">
                <div class="d-flex justify-content-between align-items-center">
                    <h1>Order n<%= (index + 1) %>: <%= order._id %></h1>
                    <a href="/orders/<%=order._id%>" class="btn btn-primary">Invoice</a>
                </div>
                <ul class="list-group list-group-flush">
                    <% order.products.forEach(p => {%>
                    <li class="list-group-item"><%= p.product.title %>                        
                        <span class="badge bg-primary rounded-pill ml-3"><%= p.quantity%></span>
                    </li>
                    <%});%>
                </ul>
            </li>
            <%});%>
        </ul>
    <%}%>
</div>
<%- include('../includes/end.ejs') %>